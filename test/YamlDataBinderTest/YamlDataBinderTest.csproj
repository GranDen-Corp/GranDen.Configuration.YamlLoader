    </ItemGroup>

    <ItemGroup>
      <Compile Remove="TestResult\**" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Remove="TestResult\**" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="TestResult\**" />
    </ItemGroup>

</Project>
